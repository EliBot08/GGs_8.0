{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ErrorLogViewer": {
    "DefaultLogDirectory": "",
    "MaxLogEntries": 5000,
    "RefreshIntervalMs": 1000,
    "AutoStartWithGGs": true,
    "DefaultTheme": "Dark",
    "DefaultViewMode": "Compact",
    "EnableEarlyLogging": true,
    "LogRetentionDays": 7,
    "LoadHistoricalLogsFromHours": 1,
    "ExportFormats": ["CSV", "JSON", "TXT"],
    "WatchSubdirectories": true,
    "ClearLogsOnStartup": true,
    "DeleteOldLogFilesOnStartup": true,
    "OldLogFileThresholdHours": 24,
    "SupportedLogExtensions": [".log", ".jsonl", ".txt", ".gz"],
    "UI": {
      "WindowWidth": 1400,
      "WindowHeight": 800,
      "MinWindowWidth": 800,
      "RememberWindowPosition": true,
      "ShowInTaskbar": true,
      "ShowInSystemTray": true
    }
  }
}