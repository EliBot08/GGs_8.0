<UserControl x:Class="GGs.Desktop.Views.CommunityHubView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Premium Gradients -->
        <LinearGradientBrush x:Key="PremiumGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="CommunityGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f093fb" Offset="0"/>
            <GradientStop Color="#f5576c" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="TrendingGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4facfe" Offset="0"/>
            <GradientStop Color="#00f2fe" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Style -->
        <Style x:Key="CommunityCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Profile Card Style -->
        <Style x:Key="ProfileCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PremiumGradient}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="PremiumButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PremiumGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search Box Style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Style="{StaticResource CommunityCard}" Background="{StaticResource CommunityGradient}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="🌐 Community Hub" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Discover, share, and rate system intelligence profiles from the community" 
                               FontSize="14" 
                               Foreground="White" 
                               Opacity="0.9"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="ShareProfileButton" 
                            Content="📤 Share Profile" 
                            Style="{StaticResource PremiumButton}"
                            Background="White"
                            Foreground="{StaticResource CommunityGradient}"
                            Margin="0,0,12,0"
                            Click="ShareProfileButton_Click"/>
                    <Button x:Name="MyProfilesButton" 
                            Content="👤 My Profiles" 
                            Style="{StaticResource PremiumButton}"
                            Background="White"
                            Foreground="{StaticResource CommunityGradient}"
                            Click="MyProfilesButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Style="{StaticResource CommunityCard}" VerticalAlignment="Top">
                <StackPanel>
                    <!-- Search Section -->
                    <TextBlock Text="🔍 Search &amp; Filter" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,12"/>

                    <TextBox x:Name="SearchTextBox" 
                             Style="{StaticResource SearchBox}"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,16"/>

                    <!-- Category Filter -->
                    <TextBlock Text="📂 Category" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="CategoryComboBox" 
                              SelectedItem="{Binding SelectedCategory}"
                              Margin="0,0,0,16">
                        <ComboBoxItem Content="All Categories"/>
                        <ComboBoxItem Content="Gaming"/>
                        <ComboBoxItem Content="Performance"/>
                        <ComboBoxItem Content="Privacy"/>
                        <ComboBoxItem Content="Security"/>
                        <ComboBoxItem Content="Productivity"/>
                        <ComboBoxItem Content="System"/>
                    </ComboBox>

                    <!-- Rating Filter -->
                    <TextBlock Text="⭐ Minimum Rating" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <Slider x:Name="RatingSlider" 
                            Minimum="0" 
                            Maximum="5" 
                            Value="{Binding MinRating}"
                            TickFrequency="1" 
                            TickPlacement="BottomRight"
                            Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding ElementName=RatingSlider, Path=Value, StringFormat='{}{0:F1} stars and above'}" 
                               FontSize="12" 
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,0,16"/>

                    <!-- Sort Options -->
                    <TextBlock Text="📊 Sort By" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="SortComboBox" 
                              SelectedItem="{Binding SortBy}"
                              Margin="0,0,0,16">
                        <ComboBoxItem Content="Most Popular"/>
                        <ComboBoxItem Content="Highest Rated"/>
                        <ComboBoxItem Content="Most Recent"/>
                        <ComboBoxItem Content="Most Downloads"/>
                        <ComboBoxItem Content="Best Match"/>
                    </ComboBox>

                    <!-- Quick Filters -->
                    <TextBlock Text="🚀 Quick Filters" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <StackPanel>
                        <CheckBox Content="Verified Profiles Only" 
                                  IsChecked="{Binding VerifiedOnly}"
                                  Margin="0,4"/>
                        <CheckBox Content="Compatible with My System" 
                                  IsChecked="{Binding CompatibleOnly}"
                                  Margin="0,4"/>
                        <CheckBox Content="Recently Updated" 
                                  IsChecked="{Binding RecentOnly}"
                                  Margin="0,4"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Margin="16,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Trending Section -->
                <Border Grid.Row="0" Style="{StaticResource CommunityCard}" Background="{StaticResource TrendingGradient}">
                    <StackPanel>
                        <TextBlock Text="🔥 Trending This Week" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,0,0,12"/>
                        
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                            <ItemsControl x:Name="TrendingProfilesControl" ItemsSource="{Binding TrendingProfiles}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                CornerRadius="8" 
                                                Padding="12" 
                                                Margin="0,0,12,0"
                                                Width="200"
                                                Cursor="Hand">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="14"
                                                           Foreground="#333"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding CreatedBy.Username}" 
                                                           FontSize="12" 
                                                           Foreground="#666"
                                                           Margin="0,4,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="⭐" FontSize="12"/>
                                                    <TextBlock Text="{Binding Stats.AverageRating, StringFormat='{}{0:F1}'}" 
                                                               FontSize="12" 
                                                               Foreground="#666"
                                                               Margin="4,0,0,0"/>
                                                    <TextBlock Text="{Binding Stats.Downloads, StringFormat='({0} downloads)'}" 
                                                               FontSize="10" 
                                                               Foreground="#999"
                                                               Margin="8,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Results Header -->
                <Grid Grid.Row="1" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalResults, StringFormat='{}{0} profiles found'}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock Text="{Binding SearchQuery, StringFormat=' for &quot;{0}&quot;'}" 
                                   FontSize="14" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="8,0,0,0"
                                   Visibility="{Binding HasSearchQuery, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ToggleButton x:Name="GridViewToggle" 
                                      Content="⊞" 
                                      IsChecked="True"
                                      Margin="0,0,8,0"
                                      Padding="8"
                                      ToolTip="Grid View"/>
                        <ToggleButton x:Name="ListViewToggle" 
                                      Content="☰" 
                                      IsChecked="{Binding ElementName=GridViewToggle, Path=IsChecked, Converter={StaticResource InverseBooleanConverter}}"
                                      Padding="8"
                                      ToolTip="List View"/>
                    </StackPanel>
                </Grid>

                <!-- Results Area -->
                <ScrollViewer Grid.Row="2" 
                              Margin="0,16,0,0"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    
                    <StackPanel>
                        <!-- Grid View -->
                        <ItemsControl x:Name="ProfilesGrid" 
                                  ItemsSource="{Binding CommunityProfiles}"
                                  Visibility="{Binding ElementName=GridViewToggle, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ProfileCard}" 
                                        MouseLeftButtonUp="ProfileCard_Click"
                                        Tag="{Binding}">
                                    <StackPanel>
                                        <!-- Profile Header -->
                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="16"
                                                           Foreground="{DynamicResource TextBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding CreatedBy.Username}" 
                                                           FontSize="12" 
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding SecurityLevel}" 
                                                           FontSize="10" 
                                                           FontWeight="SemiBold"
                                                           Padding="6,2"
                                                           Background="{Binding SecurityLevel, Converter={StaticResource SecurityLevelToBrushConverter}}"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Description -->
                                        <TextBlock Text="{Binding Description}" 
                                                   FontSize="12" 
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   TextWrapping="Wrap"
                                                   MaxHeight="40"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,0,0,12"/>

                                        <!-- Stats -->
                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding TweakSummary.TotalTweaks}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="16"
                                                           Foreground="{DynamicResource TextBrush}"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="Tweaks" 
                                                           FontSize="10" 
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="⭐" FontSize="14"/>
                                                    <TextBlock Text="{Binding Stats.AverageRating, StringFormat='{}{0:F1}'}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextBrush}"
                                                               Margin="4,0,0,0"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Stats.TotalRatings, StringFormat='({0} ratings)'}" 
                                                           FontSize="10" 
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Stats.Downloads}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="16"
                                                           Foreground="{DynamicResource TextBrush}"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="Downloads" 
                                                           FontSize="10" 
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Tags -->
                                        <ItemsControl ItemsSource="{Binding Tags}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{DynamicResource AccentBrush}" 
                                                            CornerRadius="10" 
                                                            Padding="6,2" 
                                                            Margin="0,0,4,4">
                                                        <TextBlock Text="{Binding}" 
                                                                   FontSize="10" 
                                                                   Foreground="White"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Action Buttons -->
                                        <Grid Margin="0,12,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Button Grid.Column="0" 
                                                    Content="📥 Download" 
                                                    Style="{StaticResource PremiumButton}"
                                                    FontSize="12"
                                                    Padding="12,6"
                                                    Click="DownloadProfile_Click"
                                                    Tag="{Binding}"/>
                                            
                                            <Button Grid.Column="1" 
                                                    Content="👁" 
                                                    Background="Transparent"
                                                    BorderThickness="1"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    Foreground="{DynamicResource TextBrush}"
                                                    Padding="8,6"
                                                    Margin="8,0,0,0"
                                                    ToolTip="View Details"
                                                    Click="ViewDetails_Click"
                                                    Tag="{Binding}"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- List View -->
                    <ListView x:Name="ProfilesList" 
                              ItemsSource="{Binding CommunityProfiles}"
                              Visibility="{Binding ElementName=ListViewToggle, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                              Background="Transparent"
                              BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ProfileCard}" 
                                        Width="800"
                                        MouseLeftButtonUp="ProfileCard_Click"
                                        Tag="{Binding}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="16"
                                                               Foreground="{DynamicResource TextBrush}"/>
                                                    <TextBlock Text="{Binding CreatedBy.Username}" 
                                                               FontSize="12" 
                                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <TextBlock Text="⭐" FontSize="14"/>
                                                    <TextBlock Text="{Binding Stats.AverageRating, StringFormat='{}{0:F1}'}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextBrush}"
                                                               Margin="4,0,0,0"/>
                                                    <TextBlock Text="{Binding Stats.Downloads, StringFormat='• {0} downloads'}" 
                                                               FontSize="12" 
                                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                                               Margin="12,0,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <TextBlock Text="{Binding Description}" 
                                                       FontSize="12" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                       TextWrapping="Wrap"
                                                       Margin="0,8,0,0"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="📥 Download" 
                                                    Style="{StaticResource PremiumButton}"
                                                    FontSize="12"
                                                    Padding="12,6"
                                                    Margin="0,0,8,0"
                                                    Click="DownloadProfile_Click"
                                                    Tag="{Binding}"/>
                                            <Button Content="👁" 
                                                    Background="Transparent"
                                                    BorderThickness="1"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    Foreground="{DynamicResource TextBrush}"
                                                    Padding="8,6"
                                                    ToolTip="View Details"
                                                    Click="ViewDetails_Click"
                                                    Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" 
                Grid.RowSpan="2"
                Background="Black" 
                Opacity="0.5" 
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="4" 
                             Background="Transparent"
                             Foreground="{StaticResource PremiumGradient}"/>
                <TextBlock Text="Loading community profiles..." 
                           Foreground="White" 
                           FontSize="14" 
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
