<Window x:Class="GGs.Desktop.Views.ErrorLogViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GGs.Desktop.Views"
        mc:Ignorable="d"
        Title="Error Log Viewer"
        Height="800"
        Width="1200"
        MinHeight="650"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource ThemeBackgroundPrimary}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter Panel -->
        <Border Grid.Row="0" Background="{DynamicResource ThemeBackgroundSecondary}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,0,0,1">
            <Grid Margin="20,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Level Filters -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Levels:" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextPrimary}" Margin="0,0,12,0"/>
                    <CheckBox Content="Info" IsChecked="{Binding IncludeInfo}" Margin="0,0,8,0" Foreground="{DynamicResource ThemeTextPrimary}"/>
                    <CheckBox Content="Warning" IsChecked="{Binding IncludeWarning}" Margin="0,0,8,0" Foreground="{DynamicResource ThemeTextPrimary}"/>
                    <CheckBox Content="Error" IsChecked="{Binding IncludeError}" Margin="0,0,8,0" Foreground="{DynamicResource ThemeTextPrimary}"/>
                    <CheckBox Content="Debug" IsChecked="{Binding IncludeDebug}" Margin="0,0,16,0" Foreground="{DynamicResource ThemeTextPrimary}"/>
                </StackPanel>

                <!-- Search Filter -->
                <TextBox Grid.Column="1" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="20,0"
                         VerticalAlignment="Center"
                         Background="{DynamicResource ThemeBackgroundTertiary}"
                         Foreground="{DynamicResource ThemeTextPrimary}"
                         BorderBrush="{DynamicResource ThemeBorder}"
                         Padding="8,4"
                         FontSize="14">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="12,0"/>
                                                <TextBlock x:Name="PlaceholderText"
                                                           Text="Search logs..."
                                                           Foreground="{DynamicResource ThemeTextSecondary}"
                                                           IsHitTestVisible="False"
                                                           Margin="12,6,12,0"
                                                           Visibility="Collapsed"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Auto Scroll and Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox Content="Auto Scroll" IsChecked="{Binding AutoScrollToBottom}" 
                              Margin="0,0,24,0" VerticalAlignment="Center" Foreground="{DynamicResource ThemeTextPrimary}"/>
                    <Button Content="{Binding PauseButtonText}"
                            Command="{Binding TogglePauseCommand}"
                            Margin="0,0,12,0"
                            Padding="16,8"
                            Background="{DynamicResource ThemeAccentSecondary}"
                            Foreground="{DynamicResource ThemeTextPrimary}"
                            BorderThickness="0"
                            FontWeight="SemiBold"/>
                    <Button Content="Clear"
                            Command="{Binding ClearCommand}"
                            Margin="0,0,12,0"
                            Padding="16,8"
                            Background="{DynamicResource ThemeError}"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"/>
                    <Button Content="Export"
                            Command="{Binding ExportCommand}"
                            Margin="0,0,12,0"
                            Padding="16,8"
                            Background="{DynamicResource ThemeSuccess}"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"/>
                    <Button Content="Open Folder"
                            Command="{Binding OpenFolderCommand}"
                            Padding="16,8"
                            Background="{DynamicResource ThemeBackgroundTertiary}"
                            Foreground="{DynamicResource ThemeTextPrimary}"
                            BorderBrush="{DynamicResource ThemeBorder}"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Log Entries List -->
        <DataGrid x:Name="LogDataGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding Logs}"
                  SelectedItem="{Binding SelectedLog}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="{DynamicResource ThemeBackgroundPrimary}"
                  Foreground="{DynamicResource ThemeTextPrimary}"
                  BorderThickness="0"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  CanUserReorderColumns="False"
                  ScrollViewer.CanContentScroll="True"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding TimestampText}" Width="180" CanUserSort="True" SortDirection="Descending">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource ThemeTextSecondary}"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                            <Setter Property="FontSize" Value="12"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="100" CanUserSort="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="140" CanUserSort="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource ThemeTextSecondary}"/>
                            <Setter Property="FontSize" Value="12"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="FontSize" Value="12"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ThemeAccentSecondary}"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding Level}" Value="ERROR">
                            <Setter Property="Background" Value="{DynamicResource ThemeErrorBackground}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Level}" Value="WARNING">
                            <Setter Property="Background" Value="{DynamicResource ThemeWarningBackground}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- Load More Button -->
        <Border Grid.Row="2" Background="{DynamicResource ThemeBackgroundSecondary}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,1,0,0">
            <Grid Margin="20,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Load More"
                        Command="{Binding LoadMoreCommand}"
                        Padding="20,10"
                        Background="{DynamicResource ThemeAccent}"
                        Foreground="{DynamicResource ThemeTextPrimary}"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Left"/>

                <TextBlock Grid.Column="1" Text="{Binding StatusText}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource ThemeTextSecondary}"
                           FontSize="14"/>

                <TextBlock Grid.Column="2" Text="{Binding LastRefreshedDisplay}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Foreground="{DynamicResource ThemeTextSecondary}"
                           FontSize="12"/>
            </Grid>
        </Border>

        <!-- Details Panel -->
        <Border Grid.Row="3" Background="{DynamicResource ThemeBackgroundSecondary}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,1,0,0" MinHeight="200">
            <Grid Margin="20,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="400"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250" MinWidth="200"/>
                </Grid.ColumnDefinitions>

                <!-- Raw Message -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Raw Log Entry" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource ThemeTextPrimary}" Margin="0,0,0,12"/>
                    <TextBox Grid.Row="1"
                             Text="{Binding SelectedLog.Raw, Mode=OneWay}"
                             IsReadOnly="True"
                             Background="{DynamicResource ThemeBackgroundTertiary}"
                             Foreground="{DynamicResource ThemeTextPrimary}"
                             BorderBrush="{DynamicResource ThemeBorder}"
                             FontFamily="Consolas"
                             FontSize="11"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             AcceptsReturn="True"
                             Padding="8"/>
                </Grid>

                <!-- Separator -->
                <Border Grid.Column="1" Width="1" Background="{DynamicResource ThemeBorder}" Margin="20,0"/>

                <!-- File Info -->
                <StackPanel Grid.Column="2" Orientation="Vertical">
                    <TextBlock Text="File Information" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource ThemeTextPrimary}" Margin="0,0,0,12"/>
                    <TextBlock Text="File Path:" Foreground="{DynamicResource ThemeTextSecondary}" FontSize="12" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding SelectedLog.FilePath, Mode=OneWay}"
                             IsReadOnly="True"
                             Background="{DynamicResource ThemeBackgroundTertiary}"
                             Foreground="{DynamicResource ThemeTextPrimary}"
                             BorderBrush="{DynamicResource ThemeBorder}"
                             FontFamily="Consolas"
                             FontSize="10"
                             Margin="0,8,0,16"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Padding="8"
                             MinHeight="60"/>
                    <TextBlock Text="Line Number:" Foreground="{DynamicResource ThemeTextSecondary}" FontSize="12" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SelectedLog.LineNumber, Mode=OneWay}"
                               Foreground="{DynamicResource ThemeTextPrimary}"
                               FontFamily="Consolas"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Busy Indicator -->
        <Border Grid.Row="0" Grid.RowSpan="4"
                Background="{DynamicResource ThemeBackgroundOverlay}"
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,16"/>
                <TextBlock Text="Loading..." Foreground="{DynamicResource ThemeTextPrimary}" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>