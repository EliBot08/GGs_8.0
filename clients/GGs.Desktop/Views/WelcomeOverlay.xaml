<UserControl x:Class="GGs.Desktop.Views.WelcomeOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400">
    <Grid Background="{DynamicResource ThemeBackgroundPrimary}">
        <!-- Spotlight Effect -->
        <Rectangle Fill="{DynamicResource ThemeSpotlightGradient}" Opacity="0.3"/>
        
        <!-- Main Content -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Logo and Title -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,32">
                <TextBlock Text="GGs" FontSize="72" FontWeight="Bold" 
                          Foreground="{DynamicResource ThemeAccentGradient}"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="PRO" FontSize="24" 
                          Foreground="{DynamicResource ThemeAccentSecondary}"
                          HorizontalAlignment="Center" Margin="0,-12,0,0"/>
            </StackPanel>
            
            <!-- Welcome Message -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,48">
                <TextBlock x:Name="WelcomeTitle" Text="Welcome to GGs" 
                          FontSize="32" FontWeight="SemiBold"
                          Foreground="{DynamicResource ThemeTextPrimary}"
                          HorizontalAlignment="Center" TextAlignment="Center"/>
                <TextBlock x:Name="WelcomeSubtitle" Text="Optimizing your experience..." 
                          FontSize="16" Foreground="{DynamicResource ThemeTextSecondary}"
                          HorizontalAlignment="Center" TextAlignment="Center" Margin="0,12,0,0"/>
            </StackPanel>
            
            <!-- Progress Indicator -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,32">
                <ProgressBar x:Name="InitProgressBar" Width="400" Height="4" 
                            IsIndeterminate="True"
                            Foreground="{DynamicResource ThemeAccentPrimary}"
                            Background="{DynamicResource ThemeBackgroundSecondary}"
                            BorderThickness="0"/>
                <TextBlock x:Name="InitStatusText" Text="Initializing..." 
                          FontSize="13" Foreground="{DynamicResource ThemeTextTertiary}"
                          HorizontalAlignment="Center" Margin="0,12,0,0"/>
            </StackPanel>
            
            <!-- First Run Checklist (Hidden by default) -->
            <Border x:Name="FirstRunPanel" Grid.Row="3" 
                    Background="{DynamicResource ThemeSurface}"
                    BorderBrush="{DynamicResource ThemeBorder}"
                    BorderThickness="1" CornerRadius="16" Padding="32"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Get Started" FontSize="20" FontWeight="SemiBold"
                              Foreground="{DynamicResource ThemeTextPrimary}" Margin="0,0,0,16"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="✓" FontSize="18" Foreground="{DynamicResource ThemeSuccess}" 
                                  Width="24" VerticalAlignment="Center"/>
                        <TextBlock Text="System initialized" FontSize="14" 
                                  Foreground="{DynamicResource ThemeTextSecondary}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="✓" FontSize="18" Foreground="{DynamicResource ThemeSuccess}" 
                                  Width="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Theme applied" FontSize="14" 
                                  Foreground="{DynamicResource ThemeTextSecondary}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                        <TextBlock Text="✓" FontSize="18" Foreground="{DynamicResource ThemeSuccess}" 
                                  Width="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Services ready" FontSize="14" 
                                  Foreground="{DynamicResource ThemeTextSecondary}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button x:Name="GetStartedButton" Content="Get Started" 
                           Style="{StaticResource PrimaryButton}"
                           HorizontalAlignment="Center" Padding="32,12"
                           Click="GetStartedButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

