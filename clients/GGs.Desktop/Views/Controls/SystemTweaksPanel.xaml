<UserControl x:Class="GGs.Desktop.Views.Controls.SystemTweaksPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:GGs.Desktop.Views.Controls">
    
    <UserControl.Resources>
        <!-- Professional Card Style -->
        <Style x:Key="TweakCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource ThemeBackgroundSecondary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentPrimary}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="{DynamicResource ThemeAccentPrimary}" Opacity="0.2" ShadowDepth="2" BlurRadius="12"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="TweakActionButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ThemeAccentPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeAccentSecondary}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeAccentTertiary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Indicator Style -->
        <Style x:Key="StatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Fill" Value="{DynamicResource ThemeTextSecondary}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Style="{StaticResource TweakCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸš€ System Tweaks Collection" FontSize="24" FontWeight="SemiBold" 
                              Foreground="{DynamicResource ThemeTextPrimary}" Margin="0,0,0,8"/>
                    <TextBlock Text="Deep analysis and optimization of your system configuration" 
                              FontSize="14" Foreground="{DynamicResource ThemeTextSecondary}"/>
                    
                    <!-- Real-time Status -->
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Ellipse x:Name="StatusIndicator" Style="{StaticResource StatusIndicator}"/>
                        <TextBlock x:Name="StatusText" Text="Ready to collect system tweaks" 
                                  FontSize="12" Foreground="{DynamicResource ThemeTextSecondary}" 
                                  Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="CollectTweaksButton" Content="ðŸ” Collect Tweaks" 
                           Style="{StaticResource TweakActionButton}" Margin="0,0,12,0"
                           Click="CollectTweaksButton_Click"/>
                    <Button x:Name="UploadTweaksButton" Content="â¬†ï¸ Upload Tweaks" 
                           Style="{StaticResource TweakActionButton}" IsEnabled="False"
                           Click="UploadTweaksButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,16,0">
            <StackPanel>
                
                <!-- Progress Section -->
                <Border x:Name="ProgressSection" Style="{StaticResource TweakCard}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Collection Progress" FontSize="18" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource ThemeTextPrimary}" Margin="0,0,0,16"/>
                        
                        <controls:AnimatedProgressBar x:Name="CollectionProgressBar" 
                                                     Description="Initializing system analysis..."
                                                     Progress="0" Step="1" TotalSteps="15"
                                                     AnimationType="Scanning"/>
                    </StackPanel>
                </Border>

                <!-- Upload Progress Section -->
                <Border x:Name="UploadProgressSection" Style="{StaticResource TweakCard}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="ðŸ“¤ Upload Progress" FontSize="18" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource ThemeTextPrimary}" Margin="0,0,0,16"/>
                        
                        <controls:AnimatedProgressBar x:Name="UploadProgressBar" 
                                                     Description="Preparing upload..."
                                                     Progress="0" Step="1" TotalSteps="8"
                                                     AnimationType="Processing"/>
                    </StackPanel>
                </Border>

                <!-- Results Section -->
                <Border x:Name="ResultsSection" Style="{StaticResource TweakCard}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Collection Results" FontSize="18" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource ThemeTextPrimary}" Margin="0,0,0,16"/>
                        
                        <!-- Summary Cards -->
                        <UniformGrid Columns="4" Margin="0,0,0,16">
                            <Border Background="{DynamicResource ThemeBackgroundTertiary}" 
                                   CornerRadius="6" Padding="16" Margin="0,0,8,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="TotalTweaksText" Text="0" FontSize="24" FontWeight="Bold" 
                                              Foreground="{DynamicResource ThemeAccentPrimary}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Tweaks" FontSize="12" 
                                              Foreground="{DynamicResource ThemeTextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource ThemeBackgroundTertiary}" 
                                   CornerRadius="6" Padding="16" Margin="4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="PerformanceTweaksText" Text="0" FontSize="24" FontWeight="Bold" 
                                              Foreground="{DynamicResource ThemeSuccess}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Performance" FontSize="12" 
                                              Foreground="{DynamicResource ThemeTextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource ThemeBackgroundTertiary}" 
                                   CornerRadius="6" Padding="16" Margin="4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="SecurityTweaksText" Text="0" FontSize="24" FontWeight="Bold" 
                                              Foreground="{DynamicResource ThemeWarning}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Security" FontSize="12" 
                                              Foreground="{DynamicResource ThemeTextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource ThemeBackgroundTertiary}" 
                                   CornerRadius="6" Padding="16" Margin="8,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="CollectionTimeText" Text="0s" FontSize="24" FontWeight="Bold" 
                                              Foreground="{DynamicResource ThemeInfo}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Collection Time" FontSize="12" 
                                              Foreground="{DynamicResource ThemeTextSecondary}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <!-- Detailed Results -->
                        <Expander Header="ðŸ“Š Detailed Analysis" IsExpanded="False" 
                                 Foreground="{DynamicResource ThemeTextPrimary}">
                            <StackPanel Margin="0,16,0,0">
                                <TextBlock x:Name="DetailedResultsText" Text="No results available yet." 
                                          FontSize="14" Foreground="{DynamicResource ThemeTextSecondary}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Border>

                <!-- Real-time System Information -->
                <Border x:Name="RealTimeInfoSection" Style="{StaticResource TweakCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“¡ Real-time System Information" FontSize="18" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource ThemeTextPrimary}" Margin="0,0,0,16"/>
                        
                        <!-- System Metrics Grid -->
                        <UniformGrid Columns="3" Margin="0,0,0,16">
                            <!-- CPU Usage -->
                            <Border Background="{DynamicResource ThemeBackgroundTertiary}" 
                                   CornerRadius="6" Padding="16" Margin="0,0,8,8">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸ”§" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="CPU Usage" FontSize="14" FontWeight="SemiBold" 
                                                  Foreground="{DynamicResource ThemeTextPrimary}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="CpuUsageText" Text="--%" FontSize="20" FontWeight="Bold" 
                                              Foreground="{DynamicResource ThemeAccentPrimary}"/>
                                    <ProgressBar x:Name="CpuUsageBar" Height="4" Margin="0,4,0,0" 
                                               Background="{DynamicResource ThemeBackgroundPrimary}"
                                               Foreground="{DynamicResource ThemeAccentPrimary}"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Memory Usage -->
                            <Border Background="{DynamicResource ThemeBackgroundTertiary}" 
                                   CornerRadius="6" Padding="16" Margin="4,0,4,8">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸ’¾" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Memory Usage" FontSize="14" FontWeight="SemiBold" 
                                                  Foreground="{DynamicResource ThemeTextPrimary}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="MemoryUsageText" Text="--%" FontSize="20" FontWeight="Bold" 
                                              Foreground="{DynamicResource ThemeSuccess}"/>
                                    <ProgressBar x:Name="MemoryUsageBar" Height="4" Margin="0,4,0,0" 
                                               Background="{DynamicResource ThemeBackgroundPrimary}"
                                               Foreground="{DynamicResource ThemeSuccess}"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Disk Usage -->
                            <Border Background="{DynamicResource ThemeBackgroundTertiary}" 
                                   CornerRadius="6" Padding="16" Margin="8,0,0,8">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸ’¿" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Disk Usage" FontSize="14" FontWeight="SemiBold" 
                                                  Foreground="{DynamicResource ThemeTextPrimary}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="DiskUsageText" Text="--%" FontSize="20" FontWeight="Bold" 
                                              Foreground="{DynamicResource ThemeWarning}"/>
                                    <ProgressBar x:Name="DiskUsageBar" Height="4" Margin="0,4,0,0" 
                                               Background="{DynamicResource ThemeBackgroundPrimary}"
                                               Foreground="{DynamicResource ThemeWarning}"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Network Activity -->
                            <Border Background="{DynamicResource ThemeBackgroundTertiary}" 
                                   CornerRadius="6" Padding="16" Margin="0,0,8,0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸŒ" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Network" FontSize="14" FontWeight="SemiBold" 
                                                  Foreground="{DynamicResource ThemeTextPrimary}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="NetworkActivityText" Text="-- KB/s" FontSize="16" FontWeight="Bold" 
                                              Foreground="{DynamicResource ThemeInfo}"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- GPU Usage -->
                            <Border Background="{DynamicResource ThemeBackgroundTertiary}" 
                                   CornerRadius="6" Padding="16" Margin="4,0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸŽ®" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="GPU Usage" FontSize="14" FontWeight="SemiBold" 
                                                  Foreground="{DynamicResource ThemeTextPrimary}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="GpuUsageText" Text="--%" FontSize="16" FontWeight="Bold" 
                                              Foreground="{DynamicResource ThemeAccentSecondary}"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- System Temperature -->
                            <Border Background="{DynamicResource ThemeBackgroundTertiary}" 
                                   CornerRadius="6" Padding="16" Margin="8,0,0,0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸŒ¡ï¸" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Temperature" FontSize="14" FontWeight="SemiBold" 
                                                  Foreground="{DynamicResource ThemeTextPrimary}"/>
                                    </StackPanel>
                                    <TextBlock x:Name="TemperatureText" Text="--Â°C" FontSize="16" FontWeight="Bold" 
                                              Foreground="{DynamicResource ThemeError}"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <!-- Last Update Time -->
                        <TextBlock x:Name="LastUpdateText" Text="Last updated: Never" FontSize="12" 
                                  Foreground="{DynamicResource ThemeTextSecondary}" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <!-- Agent Service Status -->
                <Border x:Name="AgentStatusSection" Style="{StaticResource TweakCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ¤– GGs Agent Service Status" FontSize="18" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource ThemeTextPrimary}" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <Ellipse x:Name="AgentStatusIndicator" Style="{StaticResource StatusIndicator}" 
                                            Fill="{DynamicResource ThemeError}"/>
                                    <TextBlock x:Name="AgentStatusText" Text="Service not running" 
                                              FontSize="14" Foreground="{DynamicResource ThemeTextPrimary}" 
                                              Margin="12,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="AgentDescriptionText" 
                                          Text="The GGs Agent service provides deep system optimization and monitoring capabilities." 
                                          FontSize="12" Foreground="{DynamicResource ThemeTextSecondary}" 
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="InstallAgentButton" Content="ðŸ“¥ Install Service" 
                                       Style="{StaticResource TweakActionButton}" Margin="0,0,8,0"
                                       Click="InstallAgentButton_Click"/>
                                <Button x:Name="StartAgentButton" Content="â–¶ï¸ Start Service" 
                                       Style="{StaticResource TweakActionButton}" IsEnabled="False"
                                       Click="StartAgentButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>