<Window x:Class="GGs.Desktop.Views.RecoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GGs Recovery Mode" Height="360" Width="640" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="ðŸ› ï¸  Recovery Mode" FontSize="20" FontWeight="SemiBold"/>
        </StackPanel>

        <Border Grid.Row="1" Padding="12" Background="#1e1e2a" CornerRadius="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="We hit an issue while starting the app. We're keeping things running so logs continue to be collected. You can retry starting the main UI below." TextWrapping="Wrap" Margin="0,0,0,8"/>
                    <TextBlock Text="Last error:" FontWeight="SemiBold" Margin="0,8,0,2"/>
                    <TextBlock x:Name="TxtError" TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="BtnRetryActivation" Content="Retry Login Window" Width="160" Margin="0,0,8,0"/>
            <Button x:Name="BtnRetryMain" Content="Retry Main Window" Width="160" Margin="0,0,8,0"/>
            <Button x:Name="BtnClose" Content="Close" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

