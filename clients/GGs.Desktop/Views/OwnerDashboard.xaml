<Window x:Class="GGs.Desktop.Views.OwnerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GGs.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="GGs - Owner Dashboard" 
        Height="900" Width="1600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.DataContext>
        <vm:OwnerDashboardViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#2D2D30"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border" BasedOn="{StaticResource ModernCard}">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Padding" Value="25,20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.02" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.02" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.0" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBlock -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SubtitleText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="StatValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="StatLabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#999999"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E1E" CornerRadius="12">
        <Grid>
            <!-- Main Content -->
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Stats Row -->
                    <RowDefinition Height="*"/>
                    <!-- Content -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#252526" Padding="30,20" CornerRadius="12,12,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Owner Dashboard" Style="{StaticResource TitleText}"/>
                            <TextBlock Text="Comprehensive system management and analytics" 
                                     Style="{StaticResource SubtitleText}" 
                                     Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="🔄 Refresh" 
                                  Style="{StaticResource IconButton}"
                                  Command="{Binding RefreshCommand}"
                                  Margin="5,0"/>
                            <Button Content="📊 Report" 
                                  Style="{StaticResource IconButton}"
                                  Command="{Binding GenerateReportCommand}"
                                  Margin="5,0"/>
                            <Button Content="💾 Export" 
                                  Style="{StaticResource IconButton}"
                                  Command="{Binding ExportDataCommand}"
                                  Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Stats Row -->
                <Grid Grid.Row="1" Margin="20,20,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Devices -->
                    <Border Grid.Column="0" Style="{StaticResource StatCard}">
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="🖥️" FontSize="32" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding TotalDevices}" Style="{StaticResource StatValueText}"/>
                            <TextBlock Text="Total Devices" Style="{StaticResource StatLabelText}" Margin="0,5,0,0"/>
                            <TextBlock Margin="0,10,0,0">
                                <Run Text="{Binding ActiveDevices}" Foreground="#4EC9B0"/>
                                <Run Text=" Active" Foreground="#999999"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Active Users -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}">
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="👥" FontSize="32" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding TotalUsers}" Style="{StaticResource StatValueText}"/>
                            <TextBlock Text="Total Users" Style="{StaticResource StatLabelText}" Margin="0,5,0,0"/>
                            <TextBlock Margin="0,10,0,0">
                                <Run Text="{Binding ActiveUsers}" Foreground="#4EC9B0"/>
                                <Run Text=" Active" Foreground="#999999"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Alerts -->
                    <Border Grid.Column="2" Style="{StaticResource StatCard}">
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="🔔" FontSize="32" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding AlertCount}" Style="{StaticResource StatValueText}"/>
                            <TextBlock Text="Active Alerts" Style="{StaticResource StatLabelText}" Margin="0,5,0,0"/>
                            <TextBlock Text="Requires attention" Foreground="#CE9178" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- System Health -->
                    <Border Grid.Column="3" Style="{StaticResource StatCard}">
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="❤️" FontSize="32" Margin="0,0,0,10"/>
                            <TextBlock Style="{StaticResource StatValueText}">
                                <Run Text="{Binding SystemHealthScore, StringFormat=N1}"/>
                                <Run Text="%" FontSize="20"/>
                            </TextBlock>
                            <TextBlock Text="System Health" Style="{StaticResource StatLabelText}" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding HealthStatus}" Foreground="#4EC9B0" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Revenue -->
                    <Border Grid.Column="4" Style="{StaticResource StatCard}">
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="💰" FontSize="32" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding MonthlyRecurringRevenue, StringFormat=C0}" 
                                     Style="{StaticResource StatValueText}"/>
                            <TextBlock Text="Monthly Revenue" Style="{StaticResource StatLabelText}" Margin="0,5,0,0"/>
                            <TextBlock Text="MRR Average" Foreground="#999999" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Main Content Area -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Recent Devices & Alerts Row -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Recent Devices -->
                            <Border Grid.Column="0" Style="{StaticResource ModernCard}">
                                <StackPanel>
                                    <TextBlock Text="Recent Devices" 
                                             Foreground="#FFFFFF" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,15"/>

                                    <ItemsControl ItemsSource="{Binding RecentDevices}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#2D2D30" 
                                                      CornerRadius="8" 
                                                      Padding="15" 
                                                      Margin="0,0,0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Border Grid.Column="0" 
                                                              Width="50" Height="50" 
                                                              CornerRadius="25"
                                                              Background="#3E3E42"
                                                              Margin="0,0,15,0">
                                                            <TextBlock Text="🖥️" 
                                                                     FontSize="24" 
                                                                     HorizontalAlignment="Center" 
                                                                     VerticalAlignment="Center"/>
                                                        </Border>

                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding DeviceName}" 
                                                                     Foreground="#FFFFFF" 
                                                                     FontSize="14" 
                                                                     FontWeight="SemiBold"/>
                                                            <TextBlock Foreground="#999999" FontSize="12" Margin="0,2,0,0">
                                                                <Run Text="{Binding User}"/>
                                                                <Run Text="•"/>
                                                                <Run Text="{Binding OS}"/>
                                                            </TextBlock>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                            <Border Background="#4EC9B0" 
                                                                  CornerRadius="12" 
                                                                  Padding="10,5">
                                                                <TextBlock Text="{Binding Status}" 
                                                                         Foreground="#FFFFFF" 
                                                                         FontSize="11" 
                                                                         FontWeight="SemiBold"/>
                                                            </Border>
                                                            <TextBlock Text="{Binding LastSeen, StringFormat='Last seen: {0:HH:mm}'}" 
                                                                     Foreground="#999999" 
                                                                     FontSize="10" 
                                                                     HorizontalAlignment="Center"
                                                                     Margin="0,5,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!-- Recent Alerts -->
                            <Border Grid.Column="1" Style="{StaticResource ModernCard}">
                                <StackPanel>
                                    <TextBlock Text="Active Alerts" 
                                             Foreground="#FFFFFF" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,15"/>

                                    <ItemsControl ItemsSource="{Binding RecentAlerts}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#2D2D30" 
                                                      CornerRadius="8" 
                                                      Padding="15" 
                                                      Margin="0,0,0,10">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Title}" 
                                                                 Foreground="#FFFFFF" 
                                                                 FontSize="13" 
                                                                 FontWeight="SemiBold"
                                                                 TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding Description}" 
                                                                 Foreground="#999999" 
                                                                 FontSize="11" 
                                                                 TextWrapping="Wrap"
                                                                 Margin="0,5,0,0"/>
                                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}HH:mm'}" 
                                                                 Foreground="#666666" 
                                                                 FontSize="10"
                                                                 Margin="0,5,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Performance Metrics & Health Indicators -->
                        <Grid Grid.Row="1" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Performance Chart Placeholder -->
                            <Border Grid.Column="0" Style="{StaticResource ModernCard}">
                                <StackPanel>
                                    <TextBlock Text="Performance Metrics (24h)" 
                                             Foreground="#FFFFFF" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,15"/>

                                    <Border Background="#2D2D30" 
                                          Height="250" 
                                          CornerRadius="8"
                                          Padding="20">
                                        <Grid>
                                            <TextBlock Text="📈 Performance Chart" 
                                                     Foreground="#666666" 
                                                     FontSize="24"
                                                     HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center"/>
                                            <TextBlock Text="(Chart visualization would be rendered here)" 
                                                     Foreground="#666666" 
                                                     FontSize="12"
                                                     HorizontalAlignment="Center" 
                                                     VerticalAlignment="Bottom"
                                                     Margin="0,0,0,20"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Health Indicators -->
                            <Border Grid.Column="1" Style="{StaticResource ModernCard}">
                                <StackPanel>
                                    <TextBlock Text="Health Indicators" 
                                             Foreground="#FFFFFF" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,15"/>

                                    <ItemsControl ItemsSource="{Binding HealthIndicators}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#2D2D30" 
                                                      CornerRadius="8" 
                                                      Padding="15,10" 
                                                      Margin="0,0,0,8">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Grid.Row="0" 
                                                                 Text="{Binding Name}" 
                                                                 Foreground="#CCCCCC" 
                                                                 FontSize="12"/>
                                                        <TextBlock Grid.Row="1" 
                                                                 Foreground="#FFFFFF" 
                                                                 FontSize="16" 
                                                                 FontWeight="SemiBold"
                                                                 Margin="0,3,0,0">
                                                            <Run Text="{Binding Value, StringFormat=N1}"/>
                                                            <Run Text="{Binding Unit}" FontSize="11" Foreground="#999999"/>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Recent Activity -->
                        <Border Grid.Row="2" Style="{StaticResource ModernCard}" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Recent Activity" 
                                         Foreground="#FFFFFF" 
                                         FontSize="18" 
                                         FontWeight="SemiBold"
                                         Margin="0,0,0,15"/>

                                <ItemsControl ItemsSource="{Binding RecentActivity}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#2D2D30" 
                                                  CornerRadius="8" 
                                                  Padding="15" 
                                                  Margin="0,0,0,10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" 
                                                             Text="📋" 
                                                             FontSize="20" 
                                                             Margin="0,0,15,0"/>

                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Foreground="#FFFFFF" FontSize="13">
                                                            <Run Text="{Binding UserName}" FontWeight="SemiBold"/>
                                                            <Run Text="{Binding Action}" Foreground="#CCCCCC"/>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding DeviceName}" 
                                                                 Foreground="#999999" 
                                                                 FontSize="11"
                                                                 Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="2" 
                                                             Text="{Binding Timestamp, StringFormat='{}HH:mm'}" 
                                                             Foreground="#666666" 
                                                             FontSize="11"
                                                             VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>

                <!-- Loading Overlay -->
                <Border Grid.RowSpan="3" 
                      Background="#AA000000" 
                      Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Loading dashboard data..." 
                                 Foreground="#FFFFFF" 
                                 FontSize="16" 
                                 Margin="0,15,0,0"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>

