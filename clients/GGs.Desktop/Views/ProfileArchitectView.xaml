<UserControl x:Class="GGs.Desktop.Views.ProfileArchitectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource ThemeBackground}">

    <UserControl.Resources>
        <!-- Premium Gradients -->
        <LinearGradientBrush x:Key="PlatinumGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E5E4E2" Offset="0"/>
            <GradientStop Color="#C0C0C0" Offset="0.5"/>
            <GradientStop Color="#A8A8A8" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="DiamondGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#B9F2FF" Offset="0"/>
            <GradientStop Color="#66D9EF" Offset="0.5"/>
            <GradientStop Color="#1E90FF" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="EliteGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFD700" Offset="0"/>
            <GradientStop Color="#FFA500" Offset="0.5"/>
            <GradientStop Color="#FF8C00" Offset="1"/>
        </LinearGradientBrush>

        <!-- Profile Card Style -->
        <Style x:Key="ProfileCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource ThemeCard}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccent}"/>
                    </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ThemeAccent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeAccentHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeAccentPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeAccent}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccent}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccent}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{DynamicResource ThemeCard}" 
                BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,0,0,1" 
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title and Description -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ—ï¸ Profile Architect" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="{DynamicResource ThemeText}" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Manage, organize, and share your System Intelligence profiles with enterprise-grade control" 
                               FontSize="14" 
                               Foreground="{DynamicResource ThemeTextSecondary}" 
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnCreateProfile" 
                            Content="âž• Create New" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="{StaticResource EliteGradient}"
                            Click="CreateProfile_Click"/>
                    <Button x:Name="BtnImportProfile" 
                            Content="ðŸ“¥ Import" 
                            Style="{StaticResource ActionButtonStyle}"
                            Click="ImportProfile_Click"/>
                    <Button x:Name="BtnCloudSync" 
                            Content="â˜ï¸ Sync Cloud" 
                            Style="{StaticResource ActionButtonStyle}"
                            Background="{StaticResource DiamondGradient}"
                            Click="CloudSync_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Style="{StaticResource ProfileCardStyle}" Margin="0,0,12,0">
                <StackPanel>
                    <!-- License Information -->
                    <Border Background="{StaticResource PlatinumGradient}" 
                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="ðŸ’Ž Enterprise License" 
                                       FontSize="16" FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="ProfileUsageText" 
                                       Text="3 / 5 Profiles Used" 
                                       FontSize="12" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,4,0,8"/>
                            <ProgressBar x:Name="ProfileUsageProgress" 
                                         Value="60" Maximum="100" 
                                         Height="6" 
                                         Background="White" 
                                         Foreground="{DynamicResource ThemeAccent}"/>
                        </StackPanel>
                    </Border>

                    <!-- Quick Stats -->
                    <TextBlock Text="ðŸ“Š Quick Stats" 
                               FontSize="14" FontWeight="SemiBold" 
                               Foreground="{DynamicResource ThemeText}" 
                               Margin="0,0,0,12"/>
                    
                    <Grid Margin="0,0,0,16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Profiles:" FontSize="12" Foreground="{DynamicResource ThemeTextSecondary}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TotalProfilesText" Text="3" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ThemeText}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Shared Profiles:" FontSize="12" Foreground="{DynamicResource ThemeTextSecondary}" Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="SharedProfilesText" Text="1" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ThemeText}" Margin="0,4,0,0"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Tweaks:" FontSize="12" Foreground="{DynamicResource ThemeTextSecondary}" Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TotalTweaksText" Text="127" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ThemeText}" Margin="0,4,0,0"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Cloud Storage:" FontSize="12" Foreground="{DynamicResource ThemeTextSecondary}" Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="CloudStorageText" Text="2.3 MB" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ThemeText}" Margin="0,4,0,0"/>
                    </Grid>

                    <!-- Filter Options -->
                    <TextBlock Text="ðŸ” Filter &amp; Sort" 
                               FontSize="14" FontWeight="SemiBold" 
                               Foreground="{DynamicResource ThemeText}" 
                               Margin="0,0,0,12"/>

                    <StackPanel>
                        <ToggleButton x:Name="FilterAll" Content="All Profiles" 
                                      Style="{StaticResource FilterButtonStyle}" 
                                      IsChecked="True" 
                                      Click="Filter_Click"/>
                        <ToggleButton x:Name="FilterLocal" Content="Local Only" 
                                      Style="{StaticResource FilterButtonStyle}" 
                                      Click="Filter_Click"/>
                        <ToggleButton x:Name="FilterShared" Content="Shared" 
                                      Style="{StaticResource FilterButtonStyle}" 
                                      Click="Filter_Click"/>
                        <ToggleButton x:Name="FilterFavorites" Content="Favorites" 
                                      Style="{StaticResource FilterButtonStyle}" 
                                      Click="Filter_Click"/>
                    </StackPanel>

                    <ComboBox x:Name="SortComboBox" 
                              Margin="0,12,0,0" 
                              Background="{DynamicResource ThemeCard}"
                              Foreground="{DynamicResource ThemeText}"
                              BorderBrush="{DynamicResource ThemeBorder}"
                              SelectionChanged="Sort_Changed">
                        <ComboBoxItem Content="Sort by Date (Newest)" Tag="DateDesc" IsSelected="True"/>
                        <ComboBoxItem Content="Sort by Date (Oldest)" Tag="DateAsc"/>
                        <ComboBoxItem Content="Sort by Name (A-Z)" Tag="NameAsc"/>
                        <ComboBoxItem Content="Sort by Name (Z-A)" Tag="NameDesc"/>
                        <ComboBoxItem Content="Sort by Tweaks Count" Tag="TweaksDesc"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Main Profile Grid -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search and View Controls -->
                <Border Grid.Row="0" Background="{DynamicResource ThemeCard}" 
                        BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" 
                        CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <TextBox x:Name="SearchTextBox" 
                                 Grid.Column="0"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource ThemeBackground}"
                                 Foreground="{DynamicResource ThemeText}"
                                 BorderBrush="{DynamicResource ThemeBorder}"
                                 BorderThickness="1"
                                 Padding="12,8"
                                 FontSize="14"
                                 VerticalAlignment="Center"
                                 TextChanged="Search_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="ðŸ” Search profiles by name, description, or tweaks..." 
                                                                       Foreground="{DynamicResource ThemeTextSecondary}" 
                                                                       FontSize="14" 
                                                                       Margin="12,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- View Toggle -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="12,0,0,0">
                            <ToggleButton x:Name="GridViewToggle" 
                                          Content="âŠž" 
                                          Style="{StaticResource FilterButtonStyle}" 
                                          IsChecked="True" 
                                          ToolTip="Grid View"
                                          Click="ViewToggle_Click"/>
                            <ToggleButton x:Name="ListViewToggle" 
                                          Content="â˜°" 
                                          Style="{StaticResource FilterButtonStyle}" 
                                          ToolTip="List View"
                                          Click="ViewToggle_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Profile Display Area -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <!-- Grid View -->
                        <ItemsControl x:Name="ProfilesGridView" Visibility="Visible">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ProfileCardStyle}" Width="280" Height="200" Cursor="Hand">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Profile Header -->
                                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontSize="16" FontWeight="SemiBold" 
                                                               Foreground="{DynamicResource ThemeText}" 
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding CreatedDate, StringFormat='Created: {0:MMM dd, yyyy}'}" 
                                                               FontSize="11" 
                                                               Foreground="{DynamicResource ThemeTextSecondary}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <TextBlock Text="{Binding StatusIcon}" FontSize="16" Margin="0,0,4,0"/>
                                                    <Button Content="â‹¯" 
                                                            Background="Transparent" 
                                                            BorderThickness="0" 
                                                            Foreground="{DynamicResource ThemeTextSecondary}"
                                                            FontSize="16" 
                                                            Padding="4"
                                                            Cursor="Hand"
                                                            Click="ProfileMenu_Click"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Profile Content -->
                                            <StackPanel Grid.Row="1">
                                                <TextBlock Text="{Binding Description}" 
                                                           FontSize="12" 
                                                           Foreground="{DynamicResource ThemeTextSecondary}" 
                                                           TextWrapping="Wrap" 
                                                           MaxHeight="60" 
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,0,0,8"/>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Tweaks" FontSize="10" Foreground="{DynamicResource ThemeTextSecondary}"/>
                                                        <TextBlock Text="{Binding TweakCount}" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource ThemeAccent}"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Safety Score" FontSize="10" Foreground="{DynamicResource ThemeTextSecondary}"/>
                                                        <TextBlock Text="{Binding SafetyScore, StringFormat={}{0}%}" FontSize="18" FontWeight="Bold" Foreground="{Binding SafetyColor}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Profile Actions -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="ðŸ“‹ Apply" 
                                                        Style="{StaticResource ActionButtonStyle}" 
                                                        FontSize="10" 
                                                        Padding="8,4"
                                                        Click="ApplyProfile_Click"/>
                                                <Button Content="ðŸ“¤ Share" 
                                                        Style="{StaticResource ActionButtonStyle}" 
                                                        FontSize="10" 
                                                        Padding="8,4"
                                                        Background="{StaticResource DiamondGradient}"
                                                        Click="ShareProfile_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- List View -->
                        <ListView x:Name="ProfilesListView" 
                                  Visibility="Collapsed"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ProfileCardStyle}" Margin="0,4">
                                        <Grid Height="80">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Profile Icon -->
                                            <Border Grid.Column="0" 
                                                    Background="{DynamicResource ThemeAccent}" 
                                                    CornerRadius="8" 
                                                    Width="48" Height="48" 
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="ðŸ“Š" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Profile Info -->
                                            <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="16" FontWeight="SemiBold" 
                                                           Foreground="{DynamicResource ThemeText}"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           FontSize="12" 
                                                           Foreground="{DynamicResource ThemeTextSecondary}" 
                                                           TextTrimming="CharacterEllipsis" 
                                                           Margin="0,2,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding TweakCount}" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ThemeAccent}"/>
                                                    <TextBlock Text=" tweaks â€¢ " FontSize="12" Foreground="{DynamicResource ThemeTextSecondary}"/>
                                                    <TextBlock Text="{Binding CreatedDate, StringFormat='MMM dd'}" FontSize="12" Foreground="{DynamicResource ThemeTextSecondary}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Safety Score -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="16,0">
                                                <TextBlock Text="Safety" FontSize="10" Foreground="{DynamicResource ThemeTextSecondary}" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SafetyScore, StringFormat='P0'}" 
                                                           FontSize="16" FontWeight="Bold" 
                                                           Foreground="{Binding SafetyColor}" 
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Content="Apply" 
                                                        Style="{StaticResource ActionButtonStyle}" 
                                                        FontSize="11" 
                                                        Padding="12,6"
                                                        Click="ApplyProfile_Click"/>
                                                <Button Content="Share" 
                                                        Style="{StaticResource ActionButtonStyle}" 
                                                        FontSize="11" 
                                                        Padding="12,6"
                                                        Background="{StaticResource DiamondGradient}"
                                                        Click="ShareProfile_Click"/>
                                                <Button Content="â‹¯" 
                                                        Background="Transparent" 
                                                        BorderThickness="0" 
                                                        Foreground="{DynamicResource ThemeTextSecondary}"
                                                        FontSize="16" 
                                                        Padding="8"
                                                        Click="ProfileMenu_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" 
                Grid.RowSpan="2" 
                Background="#80000000" 
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" Height="4" 
                             Background="Transparent" 
                             Foreground="{DynamicResource ThemeAccent}"/>
                <TextBlock x:Name="LoadingText" 
                           Text="Loading profiles..." 
                           FontSize="14" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
