<Application x:Class="GGs.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GGs.Desktop"
             StartupUri="Views/LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/EnterpriseThemes.xaml"/>
                <ResourceDictionary Source="Themes/EnterpriseAnimations.xaml"/>
                <ResourceDictionary Source="Themes/SafeStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Resources -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>


