<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <ResourceDictionary.MergedDictionaries>
        <!-- Default theme merged at design time; runtime swapping handled by ThemeManagerService -->
        <ResourceDictionary Source="Palettes/Midnight.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Layout & Spacing Tokens -->
    <Thickness x:Key="ThemePagePadding">32,28,32,28</Thickness>
    <Thickness x:Key="ThemeSectionPadding">24,20,24,20</Thickness>
    <Thickness x:Key="ThemeCardPadding">20,16,20,16</Thickness>
    <Thickness x:Key="ThemeToolbarPadding">24,18,24,18</Thickness>

    <CornerRadius x:Key="ThemeCornerRadiusSmall">6</CornerRadius>
    <CornerRadius x:Key="ThemeCornerRadiusMedium">10</CornerRadius>
    <CornerRadius x:Key="ThemeCornerRadiusLarge">16</CornerRadius>

    <sys:Double x:Key="ThemeElevationLow">4</sys:Double>
    <sys:Double x:Key="ThemeElevationMedium">12</sys:Double>
    <sys:Double x:Key="ThemeElevationHigh">24</sys:Double>

    <!-- Shadow Effects -->
    <DropShadowEffect x:Key="ThemeShadow.Card"
                      Color="{DynamicResource ThemeShadowColor}"
                      BlurRadius="22"
                      ShadowDepth="6"
                      Opacity="0.35"/>

    <DropShadowEffect x:Key="ThemeShadow.Floating"
                      Color="{DynamicResource ThemeShadowColor}"
                      BlurRadius="32"
                      ShadowDepth="10"
                      Opacity="0.45"/>

    <!-- Typography Defaults -->
    <sys:Double x:Key="GlobalFontSize">13</sys:Double>
    <FontFamily x:Key="ThemeFontFamilyPrimary">Segoe UI</FontFamily>
    <FontFamily x:Key="ThemeFontFamilyMonospace">Cascadia Code, Consolas, 'Courier New'</FontFamily>

    <!-- Animation Durations -->
    <Duration x:Key="AnimationDuration.Fast">0:0:0.15</Duration>
    <Duration x:Key="AnimationDuration.Medium">0:0:0.35</Duration>
    <Duration x:Key="AnimationDuration.Slow">0:0:0.6</Duration>

    <!-- Acrylic / Glass Defaults -->
    <sys:Double x:Key="ThemeAcrylicOpacity">0.82</sys:Double>
    <sys:Double x:Key="ThemeGlassBlurRadius">18</sys:Double>
</ResourceDictionary>




