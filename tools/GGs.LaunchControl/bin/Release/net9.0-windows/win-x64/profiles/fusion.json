{
  "name": "fusion",
  "description": "Launch Desktop + ErrorLogViewer together (Fusion mode)",
  "applications": [
    {
      "name": "GGs Desktop",
      "executablePath": "clients/GGs.Desktop/bin/Release/net9.0-windows/GGs.Desktop.exe",
      "arguments": "",
      "requiresElevation": false,
      "waitForExit": false,
      "optional": false
    },
    {
      "name": "GGs ErrorLogViewer",
      "executablePath": "tools/GGs.ErrorLogViewer/bin/Release/net9.0-windows/GGs.ErrorLogViewer.exe",
      "arguments": "",
      "requiresElevation": false,
      "waitForExit": false,
      "optional": true
    }
  ],
  "healthChecks": [
    {
      "type": "DotNetRuntime",
      "target": ".NET 9.0",
      "description": ".NET 9.0 Runtime",
      "required": true
    },
    {
      "type": "DirectoryExists",
      "target": "clients/GGs.Desktop/bin/Release/net9.0-windows",
      "description": "Desktop binaries directory",
      "required": true,
      "autoFix": "CreateDirectory"
    },
    {
      "type": "FileExists",
      "target": "clients/GGs.Desktop/bin/Release/net9.0-windows/GGs.Desktop.exe",
      "description": "Desktop executable",
      "required": true
    },
    {
      "type": "DirectoryExists",
      "target": "tools/GGs.ErrorLogViewer/bin/Release/net9.0-windows",
      "description": "ErrorLogViewer binaries directory",
      "required": false,
      "autoFix": "CreateDirectory"
    },
    {
      "type": "FileExists",
      "target": "tools/GGs.ErrorLogViewer/bin/Release/net9.0-windows/GGs.ErrorLogViewer.exe",
      "description": "ErrorLogViewer executable",
      "required": false
    },
    {
      "type": "DiskSpace",
      "target": "C:2",
      "description": "Minimum disk space (2 GB)",
      "required": true
    }
  ],
  "exitPolicy": "FireAndForget",
  "requiresElevation": false,
  "startupDelayMs": 2000
}

