<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Themes/Palettes/Midnight.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Thickness x:Key="ThemePagePadding">28,24,28,24</Thickness>
    <Thickness x:Key="ThemeSectionPadding">22,18,22,18</Thickness>
    <Thickness x:Key="ThemeCardPadding">18,14,18,14</Thickness>
    <Thickness x:Key="ThemeToolbarPadding">24,16,24,16</Thickness>

    <CornerRadius x:Key="ThemeCornerRadiusSmall">6</CornerRadius>
    <CornerRadius x:Key="ThemeCornerRadiusMedium">10</CornerRadius>
    <CornerRadius x:Key="ThemeCornerRadiusLarge">14</CornerRadius>

    <DropShadowEffect x:Key="ThemeShadow.Card"
                      Color="{DynamicResource ThemeShadowColor}"
                      BlurRadius="20"
                      ShadowDepth="5"
                      Opacity="0.32"/>

    <DropShadowEffect x:Key="ThemeShadow.Elevated"
                      Color="{DynamicResource ThemeShadowColor}"
                      BlurRadius="28"
                      ShadowDepth="9"
                      Opacity="0.42"/>

    <sys:Double x:Key="GlobalFontSize">13</sys:Double>
    <FontFamily x:Key="ThemeFontFamilyPrimary">Segoe UI</FontFamily>
    <FontFamily x:Key="ThemeFontFamilyMonospace">Cascadia Code, Consolas</FontFamily>
</ResourceDictionary>



